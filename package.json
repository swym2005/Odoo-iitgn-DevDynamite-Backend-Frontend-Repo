{
  "name": "flowiq-auth-backend",
  "version": "0.1.0",
  "description": "FlowIQ Authentication Module (MERN backend: Express + MongoDB)",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/app.js",
    "dev:5050": "cross-env PORT=5050 nodemon src/app.js",
  "dev:5051": "cross-env PORT=5051 nodemon src/app.js",
    "start": "node src/app.js",
    "start:5050": "cross-env PORT=5050 node src/app.js",
  "start:5051": "cross-env PORT=5051 node src/app.js",
    "test": "powershell -NoProfile -Command \"$env:NODE_ENV='test'; node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand\""
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/jest.setup.js"
    ]
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.3",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.3.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
